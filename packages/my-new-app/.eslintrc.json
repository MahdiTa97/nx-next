{
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "plugin:@nrwl/nx/react-typescript",
    "next",
    "next/core-web-vitals",
    "../../.eslintrc.json",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig(.*)?.json"
  },
  "ignorePatterns": [
    "!**/*",
    ".next/**/*",
    "next.config.js",
    "tailwind.config.js"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "project": "./tsconfig(.*)?.json"
      },
      "rules": {
        "@next/next/no-html-link-for-pages": [
          "error",
          "packages/my-new-app/src/pages"
        ],
        "react/jsx-props-no-spreading": "off",
        "import/no-extraneous-dependencies": [
          "error",
          { "devDependencies": true }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ],
  "env": {
    "jest": true
  }
}

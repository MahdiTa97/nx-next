{
  "extends": [
    "plugin:@nrwl/nx/react-typescript",
    "next",
    "next/core-web-vitals",
    "../../.eslintrc.json",
    "prettier",
    "airbnb-typescript"
  ],
  "parserOptions": {
    "project": "packages/my-new-app/tsconfig.json"
  },
  "ignorePatterns": [
    "!**/*",
    ".next/**/*",
    "*.config.js",
    "*.config.ts",
    "index.d.ts"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@next/next/no-html-link-for-pages": [
          "error",
          "packages/my-new-app/pages"
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ],
  "rules": {
    "@next/next/no-html-link-for-pages": "off"
  },
  "env": {
    "jest": true
  }
}
